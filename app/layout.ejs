            <!-- <label for="subscribe" class="h3 mb-0 text-center font-weight-bold d-block d-md-none">Subscribe for Exclusive Offer</label> -->
          </div>

          <div class="col-12 col-md-10 col-lg-6 ">
            <div class="input-group input-group-lg">
              <input type="text" id="subscribe" placeholder="Your email address" class="form-control border-0 input-lg"
                required>
              <div class="input-group-append">
                <input class="btn btn-primary btn-lg px-4" type="submit" value="SUBSCRIBE">
              </div>
            </div>
          </div>

        </form>
      </div>
    </section>

    <!-- 頁尾導覽列 -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white py-3">
      <div class="container">
        <ul
          class="navbar-nav flex-column-reverse flex-column-md flex-md-row justify-content-center justify-content-md-between align-items-center w-100">
